{% extends 'base.html.twig' %}
{% block title %}Administration
{% endblock %}
{% block body %}
	<h1>Administration</h1>
	<h2>Commandes</h2>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>#</th>
				<th>Titre</th>
			</tr>
		</thead>
		<tbody>
			{% for post in category.posts %}
				<tr>
					<td>{{ post.id }}</td>
					<td>
						<a href="{{ path('post_show', {id: post.id}) }}">{{ post.title }}</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="2">Il n'y a pas d'articles associés</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<h2>Reservation</h2>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>#</th>
				<th>Titre</th>
			</tr>
		</thead>
		<tbody>
			{% for post in category.posts %}
				<tr>
					<td>{{ post.id }}</td>
					<td>
						<a href="{{ path('post_show', {id: post.id}) }}">{{ post.title }}</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="2">Il n'y a pas d'articles associés</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<h2>Plats</h2>
{% endblock %}
